//some base styles
*,
*::after,
*::before
    box-sizing border-box
    
a
    transition color $time-md, background-color $time-md

body
    font-family GothamProBlack, sans-serif
    
.icon
    overflow visible
    vertical-align middle
    transition fill $time-md
    
button
    background transparent
    border none
    outline none
    cursor pointer
    font-family GothamProBlack, sans-serif
    
[role="button"]
    cursor pointer
    transition background-color $time-md, border-color $time-md, color $time-md

//icon animatiom 

@keyframes toBottomFromTop 
    49% 
        transform translateY(100%)
    
    50%
        opacity 0
        transform translateY(-100%)
    
    51% 
        opacity 1
        fill transparent
    
@keyframes touch
    0%
        opacity 0
        width 0
        height 0
    50%
        opacity 0.7
        width 30px
        height 30px
    
    100%
        opacity 0
        width 60px
        height 60px
        
@keyframes lazyLoad
    0%
        opacity 0
    100%
        opacity 1

a
    text-decoration none
    transition color $time-md, background-color $time-md, border-color $time-md
    
.nav
    margin 0
    padding-left 0
    list-style none
    
    >li
        position relative
        display block
        
        >a
            position relative
            display block
        
.navbar-nav
    display flex
    margin 0
    
    >li
        display flex
        
.hidden-mobile
    +below(992px)
        display none !important

.hidden
    display none !important
        
.img-responsive
    max-width 100%
    
input
    font-family GothamProBlack, sans-serif
    
::-webkit-input-placeholder {color:#8493a8; text-overflow: ellipsis;}
::-moz-placeholder          {color:#8493a8; text-overflow: ellipsis;}/* Firefox 19+ */
:-moz-placeholder           {color:#8493a8; text-overflow: ellipsis;}/* Firefox 18- */
:-ms-input-placeholder      {color:#8493a8; text-overflow: ellipsis;}

.help-block
    margin-bottom 30px
    font-size 10px
    font-weight 300
    color #8493a8
    
//sticky footer
.page
    display flex
    flex-direction column
    min-height 100vh
    
.wrapper
    flex-grow 1
    
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
input[type="number"] {
    -moz-appearance: textfield;
}

.error
    font-size 11px
    color red