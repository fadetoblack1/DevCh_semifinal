.main-header
    
    &__search-bar
        position relative
        display flex
        
        &.open
            .main-header__search-field
                transform scaleX(1)
    
    &__search-field
        position absolute
        z-index 1000
        right 30px
        height 30px
        transform-origin right
        transform scaleX(0)
        transition transform $time-md
        
    &__search-toggle
        position relative
        display flex
        align-items center
        justify-content center
        height 30px
        width 30px
        
        .icon
            fill $blue-base
            
        &:hover,
        &:focus
            .icon
                animation toBottomFromTop $time-md
                
        &:active
            .icon
                fill $blue-darker
