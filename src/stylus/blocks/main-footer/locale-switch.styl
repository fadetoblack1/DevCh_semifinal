.locale-switch
    position relative
    display inline-block
    
    &__btn
        display flex
        align-items center
        justify-content space-between
        border-radius 3px
        border 1px solid $blue-lighten
        padding 10px 20px
        font-size 11px
        font-size 300
        color #fff
        background-color #3d4d65
        
        .icon--arrow-down
            margin 0
            fill #fff
            transition transform $time-md
            
        .icon
            margin-right 5px
            
        &.open
            .icon--arrow-down
                transform rotate(-180deg)
                
    .nav
        position absolute
        top 36px
        left 0
        right 0
        z-index 10
        border-radius 3px
        border 1px solid $blue-lighten
        transform-origin top
        transform scaleY(0)
        opacity 0
        transition $time-md
        
        >li
            >a
                display flex
                align-items center
                padding 10px 20px
                font-size 11px
                font-size 300
                color #fff
                background-color #3d4d65
                
                .icon
                    margin-right 5px
                    
                &:hover,
                &:focus
                    background-color $blue-darker
                    
                &:active
                    background-color $blue-base
                
        &.open
            transform scaleY(1)
            opacity 1